<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true" >
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Руденко Максим Валерійович"
      android:paddingTop="30dp"
      android:textColor="#EE7069"
      android:gravity="center"
      android:textSize="30sp" />
    <LinearLayout
        android:id="@+id/green"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#4CAF50"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" >
        <ImageView
            android:src="@drawable/andrd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_margin="50dp" />
    </LinearLayout>
    <TextView
        android:text="Цей надпис розміщено одразу під зеленим квадратом"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#FBA023"
        android:layout_below="@id/green"
        android:gravity="center"
        android:layout_centerHorizontal="true" />
</RelativeLayout>